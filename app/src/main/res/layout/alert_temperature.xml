<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temperature_TXT_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature's Report"
            android:textColor="@color/blue_back"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/temperature_BTN_toohot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige_back"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="Too Hot">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/temperature_BTN_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige_back"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="Hot">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/temperature_BTN_pleasant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige_back"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="Pleasant">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/temperature_BTN_cold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige_back"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="Cold">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/temperature_BTN_misty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige_back"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="Misty">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/temperature_BTN_windy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige_back"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="Windy">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/temperature_BTN_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_cancel"
            android:textAllCaps="false"
            android:layout_marginLeft="100dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/temperature_BTN_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_ok"
            android:textAllCaps="false"
            android:layout_marginLeft="40dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</RelativeLayout>
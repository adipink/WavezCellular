<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShowActivity"
    android:background="@color/water">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:weightSum="16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/water"
            android:orientation="horizontal">

            <View
                android:id="@+id/welcome_LOGO_wavez"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/wave_icon"
                tools:ignore="MissingConstraints" />


            <!--            <ImageView-->
            <!--                android:id="@+id/show_IMG_profile"-->
            <!--                android:layout_width="50dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:src="@drawable/ic_user"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                tools:ignore="MissingConstraints" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/water"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_BTN_back"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                app:backgroundTint="@color/water"
                android:background="@color/transparent"
                app:icon="@drawable/ic_baseline_arrow_back_24"
                app:iconTint="@color/white"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/show_TXT_nameBeach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:gravity="start"
                android:text="Gils Beach"
                android:textColor="@color/sand"
                android:textColorHighlight="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"></com.google.android.material.textview.MaterialTextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/water"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/show_TXT_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Reports"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:background="@color/water"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/user1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6.5">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="25dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_user">

                </com.google.android.material.imageview.ShapeableImageView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userReports_TXT_username1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nick Name"
                        android:textStyle="bold">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/userReports_TXT_blurb1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This beach is the best">

                    </com.google.android.material.textview.MaterialTextView>

                    <RatingBar
                        android:id="@+id/userReports_IMG_review1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:numStars="5"
                        android:rating="5"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:isIndicator="true"></RatingBar>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/userReports_BTN_picture1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/water"
                    android:layout_gravity="top"
                    app:icon="@drawable/ic_wave"
                    app:iconSize="30dp"
                    app:iconTint="@color/white"
                    android:visibility="invisible"/>

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/user2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:weightSum="6.5"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_user"
                        android:layout_weight="1">

                    </com.google.android.material.imageview.ShapeableImageView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/userReports_TXT_username2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nick Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/userReports_TXT_blurb2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This beach is the best">

                        </com.google.android.material.textview.MaterialTextView>


                        <RatingBar
                            android:id="@+id/userReports_IMG_review2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="top"
                            android:layout_weight="1"
                            android:numStars="5"
                            android:rating="2"
                            android:scaleX=".5"
                            android:scaleY=".5"
                            android:isIndicator="true"></RatingBar>
                    </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/userReports_BTN_picture2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/water"
                    android:layout_gravity="top"
                    app:icon="@drawable/ic_wave"
                    app:iconSize="30dp"
                    app:iconTint="@color/white"
                    android:visibility="invisible"/>

                </LinearLayout>


        </LinearLayout>

        </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/report_BTN_submit"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="Create Report"
            android:textAllCaps="false"
            app:backgroundTint="@color/sea"
            android:textColor="@color/white"
            app:cornerRadius="40dp">

        </com.google.android.material.button.MaterialButton></LinearLayout>

    </LinearLayout>



</RelativeLayout>
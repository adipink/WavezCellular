<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeActivity"
    android:background="@color/water">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/water"
            android:orientation="horizontal">

            <View
                android:id="@+id/welcome_LOGO_wavez"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/wave_icon"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/welcome_BTN_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@color/transparent"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            app:backgroundTint="@color/water"
            app:icon="@drawable/ic_baseline_arrow_back_24"
            app:iconTint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:orientation="vertical">



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/welcome_TXT_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:text="@string/welcome_title"
            android:layout_margin="10dp"
            android:textColor="@color/sea"
            android:textSize="32sp"
            android:textStyle="bold"></com.google.android.material.textview.MaterialTextView>


        <LinearLayout
            android:id="@+id/welcome_LinLay_signin"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/welcome_EDT_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="@string/welcome_name"
                android:inputType="textWebEditText"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:visibility="invisible"
                >

            </EditText>


            <EditText
                android:id="@+id/welcome_EDT_email"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/welcome_email"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:visibility="invisible">

            </EditText>

            <EditText
                android:id="@+id/welcome_EDT_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="@string/welcome_password"
                android:inputType="textWebPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:visibility="invisible"
                ></EditText>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/welcome_BTN_signIn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/sea"
            android:text="@string/welcome_signin"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/welcome_BTN_signUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/sea"
            android:text="@string/welcome_signup"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold">

        </com.google.android.material.button.MaterialButton>

        <LinearLayout
            android:id="@+id/welcome_LinLay_finalAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/welcome_BTN_enterApp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/blue_back"
                    android:text="@string/welcome_login"
                    android:textAllCaps="false"
                    android:textColor="@color/beige_back"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:visibility="invisible">

                </com.google.android.material.button.MaterialButton>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/welcome_BTN_registerApp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/blue_back"
                    android:text="@string/welcome_register"
                    android:textAllCaps="false"
                    android:textColor="@color/beige_back"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    >

                </com.google.android.material.button.MaterialButton>

            </FrameLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/welcome_BTN_forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/blue_back"
                android:text="@string/welcome_forgot_password"
                android:textColor="@color/beige_back"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:textStyle="bold"
                android:visibility="invisible"
                >

            </com.google.android.material.button.MaterialButton>




        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
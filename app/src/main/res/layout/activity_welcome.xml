            android:layout_height="wrap_content"
            android:backgroundTint="@color/sea"
            android:text="@string/welcome_signin"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            android:visibility="visible">


        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/welcome_BTN_signUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/sea"
            android:text="@string/welcome_signup"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            android:visibility="visible">

        </com.google.android.material.button.MaterialButton>
-->
        <LinearLayout
            android:id="@+id/welcome_LinLay_finalAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/welcome_BTN_enterApp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                   android:layout_gravity="center"
                    android:backgroundTint="@color/sea"
                    android:text="@string/welcome_login"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:cornerRadius="40dp"
                    android:fontFamily="@font/poppins"
                    android:visibility="invisible">


                </com.google.android.material.button.MaterialButton>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/welcome_BTN_registerApp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/sea"
                    android:text="@string/welcome_register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:visibility="visible"
                    app:cornerRadius="40dp"
                    tools:ignore="TextContrastCheck"></com.google.android.material.button.MaterialButton>
            </FrameLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/welcome_BTN_forgotPassword"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:backgroundTint="@color/sea"
                android:text="@string/welcome_forgot_password"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="40dp"
                android:fontFamily="@font/poppins"
                android:visibility="invisible"
                >

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
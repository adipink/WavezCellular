<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShowActivity"
    android:background="@color/water">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:weightSum="16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/water"
            android:orientation="horizontal">

            <View
                android:id="@+id/welcome_LOGO_wavez"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/wave_icon"
                tools:ignore="MissingConstraints" />



            <RatingBar
                android:id="@+id/show_RB_review"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:numStars="5"
                android:rating="3"
                android:scaleX=".5"
                android:scaleY=".5"
                android:isIndicator="true"
                android:progressTint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/welcome_LOGO_wavez"
                app:layout_constraintEnd_toStartOf="@+id/show_IMG_profile"
                tools:ignore="MissingConstraints"></RatingBar>
                        <ImageView
                            android:id="@+id/show_IMG_profile"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_user"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/water"
            android:orientation="horizontal"
            android:weightSum="5">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_BTN_back"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                app:backgroundTint="@color/water"
                android:background="@color/transparent"
                app:icon="@drawable/ic_baseline_arrow_back_24"
                app:iconTint="@color/white"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/show_TXT_nameBeach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="4.5"
                android:gravity="center"
                android:text="Gils Beach"
                android:textColor="@color/sand"
                android:textColorHighlight="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"></com.google.android.material.textview.MaterialTextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="12"
            android:background="@color/water"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/water"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/show_TXT_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.7km from you"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/show_IMG_weatherIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        app:srcCompat="@drawable/sun" />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/show_TXT_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="26Â°c"
                        android:textColor="@color/black"
                        android:textSize="40sp"></com.google.android.material.textview.MaterialTextView>



<!--                    <RatingBar-->
<!--                        android:id="@+id/userReports_IMG_review1"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="50dp"-->
<!--                        android:numStars="5"-->
<!--                        android:rating="5"-->
<!--                        android:scaleX=".5"-->
<!--                        android:scaleY=".5"-->
<!--                        tools:ignore="MissingConstraints"></RatingBar>-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"

                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_TXT_density"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uncrowded"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/ic_empty"
                    app:iconSize="25dp"
                    app:iconTint="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_TXT_wave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10 - 20 cm"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/ic_wave"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null" />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="10 - 20 cm"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/ic_wave"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null"
                    android:visibility="invisible"
                    />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_TXT_jellyfish"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="None"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/ic_jellyfish"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_TXT_wind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="16km/h"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/ic_wind"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null"


                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="10 - 20 cm"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/ic_wave"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null"
                    android:visibility="invisible"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_TXT_danger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RED"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/ic_redflag"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_TXT_dogs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:text="No Dogs"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/dog"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null"

                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_TXT_accessible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Accessible"
                    android:layout_margin="5dp"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/accessible"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_TXT_toilets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disgusting"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/toilet"
                    app:iconGravity="textTop"
                    app:iconSize="40dp"
                    app:iconTint="@null" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_BTN_reports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Go To Reports"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue_text_card"
                    app:cornerRadius="15dp"

                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_BTN_waze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:textAllCaps="false"
                app:backgroundTint="@color/water"
                app:cornerRadius="15dp"
                app:icon="@drawable/waze"
                app:iconGravity="textTop"
                app:iconSize="45dp"
                app:iconTint="@null"
                android:background="@color/transparent"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_BTN_moovit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:textAllCaps="false"
                app:cornerRadius="15dp"
                app:icon="@drawable/moovit"
                app:iconGravity="textTop"
                app:iconSize="45dp"
                app:iconTint="@null"
                app:backgroundTint="@color/water"
                android:background="@color/transparent"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>